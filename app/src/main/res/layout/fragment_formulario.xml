<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.logonpf.demonavigationdrawer.fragments.FormularioFragment">

    <TextView
        style="@style/titulo"
        android:text="Super Calculadora"/>

    <TextView
        style="@style/label"
        android:text="Valor 1" />

    <EditText
        android:id="@+id/etValor1"
        style="@style/input"
        android:hint="Informe o valor 1" />

    <TextView
        style="@style/label"
        android:text="Valor 2" />

    <EditText
        android:id="@+id/etValor2"
        style="@style/input"
        android:hint="Informe o valor 2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btSomar"
            style="@style/botao"
            android:text="+" />

        <Button
            android:id="@+id/btSubtrair"
            style="@style/botao"
            android:text="-" />

        <Button
            android:id="@+id/btMultiplicar"
            style="@style/botao"
            android:text="*" />

        <Button
            android:id="@+id/btDividir"
            style="@style/botao"
            android:text="/" />
    </LinearLayout>

    <TextView
        style="@style/label"
        android:text="Resultado" />

    <TextView
        style="@style/label"
        android:id="@+id/tvResultado"/>

</LinearLayout>
